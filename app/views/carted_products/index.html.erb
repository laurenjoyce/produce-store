<h1>Checkout Page</h1>
</br>
</br>
<h1>Carted Products</h1>

<% @carted_products.each do |carted_product| %>
    <h2><%= carted_product.product.name %> (<%= carted_product.quantity %>)</h2>
    <%= link_to "Remove item from cart", "/carted_products/#{carted_product.id}", method: :delete %>
<% end %>

<%= form_tag "/orders", method: :post do %>
  <%= submit_tag "Buy now!" %>
<% end %> 